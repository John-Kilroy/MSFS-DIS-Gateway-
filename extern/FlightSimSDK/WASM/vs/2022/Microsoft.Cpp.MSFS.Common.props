<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <CLToolExe>clang-cl.exe</CLToolExe>
    <LinkToolExe>wasm-ld.exe</LinkToolExe>
    <LibToolExe>llvm-ar.exe</LibToolExe>
    <ExecutablePath>$(ToolsetRoot)WASM\llvm\bin;$(ExecutablePath)</ExecutablePath>

    <!-- Define Use* properties from LLVM Toolset Extension for backwards compatibility with downstream components that rely on those properties being set. -->
    <!-- For example vcpkg relies on UseLldLink=true for handling of lld-link.exe (https://github.com/microsoft/vcpkg/issues/4359) -->
    <UseClangCl>true</UseClangCl>
    <UseLldLink>true</UseLldLink>
    <UseLlvmLib>true</UseLlvmLib>
	<!-- Short names for platform toolsets (added to project name in Solution Explorer) -->
	<_PlatformToolsetShortNameFor_MSFS Condition="'$(_PlatformToolsetShortNameFor_MSFS)' == ''">MSFS</_PlatformToolsetShortNameFor_MSFS>
	<_PlatformToolsetShortNameFor_MSFS_Internal Condition="'$(_PlatformToolsetShortNameFor_MSFS_Internal)' == ''">MSFS_Internal</_PlatformToolsetShortNameFor_MSFS_Internal>
	<_PlatformToolsetShortNameFor_MSFS2024 Condition="'$(_PlatformToolsetShortNameFor_MSFS2024)' == ''">MSFS2024</_PlatformToolsetShortNameFor_MSFS2024>
	<_PlatformToolsetShortNameFor_MSFS2024_Internal Condition="'$(_PlatformToolsetShortNameFor_MSFS2024_Internal)' == ''">MSFS2024_Internal</_PlatformToolsetShortNameFor_MSFS2024_Internal>
	<!-- Friendly names added to the PlatformToolset in the property pages. -->
	<_PlatformToolsetFriendlyNameFor_MSFS Condition="'$(_PlatformToolsetFriendlyNameFor_MSFS)' == ''">Microsoft Flight Simulator</_PlatformToolsetFriendlyNameFor_MSFS>
	<_PlatformToolsetFriendlyNameFor_MSFS_Internal Condition="'$(_PlatformToolsetFriendlyNameFor_MSFS_Internal)' == ''">Microsoft Flight Simulator (internal)</_PlatformToolsetFriendlyNameFor_MSFS_Internal>
	<_PlatformToolsetFriendlyNameFor_MSFS2024 Condition="'$(_PlatformToolsetFriendlyNameFor_MSFS2024)' == ''">Microsoft Flight Simulator 2024</_PlatformToolsetFriendlyNameFor_MSFS2024>
	<_PlatformToolsetFriendlyNameFor_MSFS2024_Internal Condition="'$(_PlatformToolsetFriendlyNameFor_MSFS2024_Internal)' == ''">Microsoft Flight Simulator 2024 (internal)</_PlatformToolsetFriendlyNameFor_MSFS2024_Internal>
    <MSFS_IncludePath>$(ToolsetRoot)WASM\wasi-sysroot\include;$(ToolsetRoot)WASM\wasi-sysroot\include\c++\v1;$(ToolsetRoot)WASM\include;$(ToolsetRoot)SimConnect SDK\include</MSFS_IncludePath>
	<IncludePath>$(MSFS_IncludePath)</IncludePath>
  </PropertyGroup>
  <ItemDefinitionGroup>
    <Link>
      <AdditionalDependencies></AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>
</Project>
